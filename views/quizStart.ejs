<!DOCTYPE html>
<html lang="cs">

<head>
    <%- include ('./partials/head') %>
</head>

<body id="page-top">
    <div id="wrapper">
        <%- include ('./partials/navigation') %>
            <div id="content-wrapper" class="d-flex flex-column">
                <div id="content">
                    <div class="container-fluid">
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Příprava kvízu</h1>
                        </div>
                        <div class="row">
                            <div class="col-xl-3 col-lg-3">
                            </div>
                            <div class="col-xl-6 col-lg-6">
                                <div class="card shadow mb-4">
                                    <div
                                        class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary">
                                            Možnosti kvízu
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <form id="generateForm" action="/quiz/quiz-start" method="post">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="small mb-1">
                                                        Typ otázky:
                                                    </div>
                                                    <select class="form-select form-control" id="questionType"
                                                        name="questionType">
                                                        <option selected value="-9999">Vše</option>
                                                        <option value="1">Město patřící do státu</option>
                                                        <option value="2">Hlavní město státu</option>
                                                        <option value="3">Nejvyšší hora</option>
                                                        <option value="4">Největší stát</option>
                                                    </select>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="small mb-1">
                                                        Počet otázek:
                                                    </div>
                                                    <input type="number" min="1" step="1" value="5" class="form-control" id="questionsCount" name="questionsCount">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <br />
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <a data-toggle="modal" data-target="#loadingModal" onclick="document.getElementById('generateForm').submit()" class="btn btn-primary btn-icon-split">
                                                        <span class="icon text-white-50">
                                                            <i class="fas fa-arrow-right"></i>
                                                        </span>
                                                        <span class="text">Vygenerovat otázky</span>
                                                    </a>
                                                </div> 
                                                <% if (message.message) { %>
                                                    <div class="col-sm-6 <%= message.messageHtmlClass %>">
                                                        <%= message.message %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-2">
                            </div>
                        </div>
                    </div>
                </div>
                <%- include ('./partials/footer') %>
                <%- include ('./partials/loading') %>
            </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="/vendor/chart.js/Chart.min.js"></script>
    <script src="/js/demo/chart-area-demo.js"></script>
    <script src="/js/demo/chart-pie-demo.js"></script>
</body>

</html>